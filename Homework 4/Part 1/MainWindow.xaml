            <Label Content="=" Canvas.Left="374" Canvas.Top="114"/>
            <TextBox x:Name="outputtxtbox" Height="23" Canvas.Left="397" TextWrapping="Wrap" Text="BMI Output" Canvas.Top="114" Width="120"/>
            <Label Content="BMI" Canvas.Left="517" Canvas.Top="111"/>
            <Button x:Name="calculatebttn" Content="Calculate" Canvas.Left="334" Canvas.Top="232" Width="75" Click="calculatebttn_Click"/>
            <TextBox x:Name="healthytxtbox" Height="49" Canvas.Left="249" TextWrapping="Wrap" Text="Waiting on Input" Canvas.Top="178" Width="295"/>
